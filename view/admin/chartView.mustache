<html>
<head>
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">


        google.charts.load('current', {'packages':['corechart']});


        google.charts.setOnLoadCallback(drawChart);


        function drawChart() {
            // Obtiene los datos de edad en formato JSON desde el controlador.
            var edadData = {{edad_json}};

            // Crea un arreglo de datos para el gr√°fico de pastel.
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Edad');
            data.addColumn('number', 'Cantidad');
            for (var edad in edadData) {
                data.addRow([edad, edadData[edad]]);
            }


            var options = {'title':'Edad de los usuarios',
                'width':400,
                'height':300};


            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>
</head>

<body>
<!--Div that will hold the pie chart-->
<div id="chart_div"></div>
</body>
</html>