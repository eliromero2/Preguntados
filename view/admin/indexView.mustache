 <main class="container ">
    <div class="row mt-5">
        <div class="col">

            {{#error}}
                <div class="alert alert-danger" role="alert">{{.}}</div>
            {{/error}}

            {{^userSession.user}}
            <section class="text-center p-3">
                <h1>Hola extra√±o</h1>
                <h2>Create una cuenta, ingresa y juga!</h2>
                <a href="/login/login" class="btn btn-primary">Iniciar Sesion</a>
                <a href="/registro/registro" class="btn btn-secondary">Crear cuenta</a>
            </section>
            {{/userSession.user}}

            {{#userSession.user}}
                <h1>Panel</h1>

                <div class="card card-body mb-3 ">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <img src="../public/avatar/{{user_name}}.jpg" width="300px"  class="rounded-circle img-fluid" alt="">
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h4>Informacion del usuario: </h4>
                            <p>Nombre: {{nombre_completo}}</p>
                            <p>Sexo: {{sexo}}</p>
                            <p>Mail: {{mail}}</p>
                            <p>Puntaje: {{puntaje}}</p>
                        </div>
                        <div class="flex-grow-1  d-flex flex-column align-items-center justify-content-center mb-3">
                            <div class="mb-3">
                                    <a href="/admin/preguntas" class="btn btn-success">Preguntas</a>
                                    <a href="/admin/sugerencias" class="btn btn-dark">Sugerencias</a>
                            </div>
                            <div>
                                <a href="/admin/categorias" class="btn btn-secondary">Categorias</a>
                                <a href="/admin/usuarios" class="btn btn-info">Usuarios</a>
                                <a href="/admin/reporte" class="btn btn-warning">Generar Reporte</a>
                            </div>

                        </div>
                    </div>
                </div>
            {{/userSession.user}}
        </div>
    </div>
 </main>
